<p style="color: green"><%= notice %></p>

<h1>Cities</h1>

<div id="cities">
  <% @cities.each do |city| %>
    <%= render city %>
    <p>
      <%= link_to "Show this city", city %>
      <%= button_to "Destroy", city, method: :delete, data: { turbo_confirm: 'Are you sure?' } %>
    </p>
  <% end %>
</div>

<%= link_to "New city", new_city_path %>
